<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/startSurveyFragment">

    <fragment
        android:id="@+id/startSurveyFragment"
        android:name="com.example.mysurveybuddy.ui.order.StartOrderFragment"
        android:label="My Survey Buddy"
        tools:layout="@layout/fragment_start_order" >
        <action
            android:id="@+id/action_startOrderFragment_to_entreeMenuFragment"
            app:destination="@id/repFragment" />
    </fragment>
    <fragment
        android:id="@+id/repFragment"
        android:name="com.example.mysurveybuddy.ui.order.EntreeMenuFragment"
        android:label="My Survey Buddy"
        tools:layout="@layout/fragment_entree_menu" >
        <action
            android:id="@+id/action_entreeMenuFragment_to_sideMenuFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_entreeMenuFragment_to_startOrderFragment"
            app:destination="@id/startSurveyFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.mysurveybuddy.ui.order.SideMenuFragment"
        android:label="My Survey Buddy"
        tools:layout="@layout/fragment_side_menu" >
        <action
            android:id="@+id/action_sideMenuFragment_to_accompanimentMenuFragment"
            app:destination="@id/recommendFragment" />
        <action
            android:id="@+id/action_sideMenuFragment_to_startOrderFragment"
            app:destination="@id/startSurveyFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendFragment"
        android:name="com.example.mysurveybuddy.ui.order.AccompanimentMenuFragment"
        android:label="My Survey Buddy"
        tools:layout="@layout/fragment_accompaniment_menu" >
        <action
            android:id="@+id/action_accompanimentMenuFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
        <action
            android:id="@+id/action_accompanimentMenuFragment_to_startOrderFragment"
            app:destination="@id/startSurveyFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.mysurveybuddy.ui.order.SummaryFragment"
        android:label="My Survey Buddy"
        tools:layout="@layout/fragment_checkout" >
        <action
            android:id="@+id/action_checkoutFragment_to_startOrderFragment"
            app:destination="@id/startSurveyFragment" />
    </fragment>
</navigation>
